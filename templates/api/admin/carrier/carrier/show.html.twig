{% extends 'base.html.twig' %}

{% block title %}Carrier{% endblock %}

{% block body %}
    <h1>Carrier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carrier.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ carrier.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ carrier.name }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ carrier.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_api_admin_carrier_carrier_index') }}">back to list</a>

    <a href="{{ path('app_api_admin_carrier_carrier_edit', {'id': carrier.id}) }}">edit</a>

    {{ include('api/admin/carrier/carrier/_delete_form.html.twig') }}
{% endblock %}
