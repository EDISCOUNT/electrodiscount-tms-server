{% extends 'base.html.twig' %}

{% block title %}Channel{% endblock %}

{% block body %}
    <h1>Channel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ channel.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ channel.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ channel.name }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ channel.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ channel.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ channel.type }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ channel.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Metadata</th>
                <td>{{ channel.metadata ? channel.metadata|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_api_admin_channel_channel_index') }}">back to list</a>

    <a href="{{ path('app_api_admin_channel_channel_edit', {'id': channel.id}) }}">edit</a>

    {{ include('api/admin/channel/channel/_delete_form.html.twig') }}
{% endblock %}
