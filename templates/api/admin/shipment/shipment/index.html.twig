{% extends 'base.html.twig' %}

{% block title %}Shipment index{% endblock %}

{% block body %}
    <h1>Shipment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>SourceId</th>
                <th>IdOnSorce</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shipment in shipments %}
            <tr>
                <td>{{ shipment.id }}</td>
                <td>{{ shipment.code }}</td>
                <td>{{ shipment.sourceId }}</td>
                <td>{{ shipment.idOnSorce }}</td>
                <td>{{ shipment.status }}</td>
                <td>
                    <a href="{{ path('app_api_admin_shipment_shipment_show', {'id': shipment.id}) }}">show</a>
                    <a href="{{ path('app_api_admin_shipment_shipment_edit', {'id': shipment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_api_admin_shipment_shipment_new') }}">Create new</a>
{% endblock %}
